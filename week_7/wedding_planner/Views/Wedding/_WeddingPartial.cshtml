@model wedding_planner.Models.Wedding
<form asp-controller="Wedding" asp-action="processwedding" method="post">
    <label asp-for="WedderOne"></label>
    <input asp-for="WedderOne"/>
    <span asp-validation-for="WedderOne"></span>
    <br>
    <label asp-for="WedderTwo"></label>
    <input asp-for="WedderTwo"/>
    <span asp-validation-for="WedderTwo"></span>
    <br>
    <label asp-for="WeddingDate"></label>
    <input asp-for="WeddingDate" value="@{@ViewBag.Today}"/>
    <span asp-validation-for="WeddingDate">@ViewBag.WeddingError</span>
    <br>
    <label asp-for="WeddingAddress"></label>
    <input asp-for="WeddingAddress"/>
    <span asp-validation-for="WeddingAddress"></span>
    <br>
    <button type="submit" id="submit">Create</button>
</form>