@{
    ViewData["Title"] = "Lost in the Woods";
}
<h1>Lost in the Woods</h1>
<h3>List of local hiking trails</h3>
<table>
    <tr>
        <th> Trail Name </th>
        <th> Trail Length </th>
        <th> Elevation Change </th>
    </tr>

        @{
            foreach(var trail in ViewBag.Trails)
                {
                <tr>
                    <td><a href="/trails/@trail.ID">@trail.Name</a> </td>
                    <td>@trail.Length Miles </td> 
                    <td>@trail.Elevation Feet </td>
                </tr>    
                }
        }
</table>
<form asp-controller="Home" asp-action="Sort" id="form" method="post">
  <input type="hidden" name="Sort" value="Elevation">
  <input type="submit" value="Sort By Elevation Change">
</form>
<form asp-controller="Home" asp-action="Sort" id="form" method="post">
  <input type="hidden" name="Sort" value="Length">
  <input type="submit" value="Sort By Trail Length">
</form>
<a href="/NewTrail"><button type="">Add a new trail!</button></a>